AR		:= ar
CC		:= g++
LD        	:= g++

LINK_MPI        = -lmpi

HDF5_DIR	:= /usr
HDF5_INCDIR 	:= $(HDF5_DIR)/include/hdf5/mpich
HDF5_LIBDIR 	:= $(HDF5_DIR)/lib/x86_64-linux-gnu/
HDF5_LIB        = hdf5_mpich

CFLAGS		= -Wall -I$(HDF5_INCDIR) -I$(MPI_INCDIR) -I../include
LDFLAGS		= -L$(HDF5_LIBDIR) -L$(MPI_LIBDIR)

MPI_DIR		:= /usr
MPI_INCDIR	:= $(MPI_DIR)/include/mpich
MPI_LIBDIR	:= $(MPI_DIR)/lib/x86_64-linux-gnu/

PARMETIS_DIR	:= /usr
PARMETIS_INCDIR	:= $(PARMETIS_DIR)/include
PARMETIS_LIBDIR	:= $(PARMETIS_DIR)/lib

include Makefile.common
